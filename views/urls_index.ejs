<% include partials/_header %>
<ul>
  <% for(let url in urls) { %>
  <li>
    URL:<%=  urls[url].longURL %>
    <ul>
      <li>
        Shortened:
        <a href='/u/<%= url %>' title="Shortcut for <%=  urls[url].longURL %>">u/<%= url %></a>
      </li>
      <li>
        Created:
        <%= urls[url].date %>
      </li>
      <li>
        Number Of Visits:
        <%= urls[url].visitNumber %>
      </li>
    </ul>

    <div class="url-actions">
      <form method="POST" action="/urls/<%= url %>/delete">
        <button type="submit" name="delete">Delete</button></form>
      <a href="/urls/<%= url %>">Edit </a>
    </div>


    <% }; %>
</ul>
